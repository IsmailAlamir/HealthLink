<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginEnd="18dp"
    android:layout_marginStart="18dp"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="18dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_doctor_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/doctor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingStart="12dp"
            android:text="Doctor name"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_doctor_pic"
            app:layout_constraintTop_toTopOf="@+id/iv_doctor_pic" />

        <TextView
            android:id="@+id/tv_doctor_specialization"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:text="Specialization"
            android:textColor="@color/dark_turquoise"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_name" />

        <TextView
            android:id="@+id/tv_doctor_phone_number"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:text="Phone Number"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_specialization" />

        <TextView
            android:id="@+id/tv_doctor_address"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:text="Address"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_doctor_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_doctor_phone_number" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>